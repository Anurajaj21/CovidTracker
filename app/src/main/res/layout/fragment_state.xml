<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.StateFragment">

    <LinearLayout
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient3"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:padding="4dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/left_arrow"/>

        <TextView
            android:id="@+id/st_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:padding="2dp"
            android:text="State Name"
            android:gravity="center"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:scrollbarSize="4dp"
        android:layout_below="@+id/location">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/district_graph"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardBackgroundColor="@color/orange"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                android:layout_below="@+id/location">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="2"
                    android:background="@drawable/gradient2">

                    <org.eazegraph.lib.charts.PieChart
                        android:id="@+id/state_piechart"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:egDrawValueInPie="true"
                        app:egLegendHeight="0dp"
                        app:egInnerPaddingColor="@color/cardview_shadow_start_color"
                        app:egValueTextSize="0dp"
                        android:padding="10dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp">
                            <View
                                android:layout_width="18dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/brown"
                                android:background="@drawable/round_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="10dp"
                                android:paddingLeft="10dp"
                                android:text="Active Cases" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp">
                            <View
                                android:layout_width="18dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/blue"
                                android:background="@drawable/round_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="10dp"
                                android:paddingLeft="10dp"
                                android:text="Confirmed Cases" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp">
                            <View
                                android:layout_width="18dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/green"
                                android:background="@drawable/round_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="10dp"
                                android:paddingLeft="10dp"
                                android:text="Recovered Cases" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp">
                            <View
                                android:layout_width="18dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/red"
                                android:background="@drawable/round_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="10dp"
                                android:paddingLeft="10dp"
                                android:text="Deaths" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/active"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/gradient2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/st_active_cases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="325356"
                            android:textColor="@color/brown"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Active"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_green"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/active"
                        app:layout_constraintTop_toTopOf="@+id/active"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/confirmed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/gradient2"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <TextView
                            android:id="@+id/st_confirmed_cases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="325356"
                            android:textColor="@color/blue"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:id="@+id/st_delta_confirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="+4678"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Confirmed"
                        android:textColor="@color/dark_green"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/confirmed"
                        app:layout_constraintTop_toTopOf="@+id/confirmed"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/recovered"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/gradient2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/st_recovered_cases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="325356"
                            android:textColor="@color/green"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:id="@+id/st_delta_recovered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="+4678"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Recovered"
                        android:textColor="@color/dark_green"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/recovered"
                        app:layout_constraintTop_toTopOf="@+id/recovered"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/deaths"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/gradient2"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <TextView
                            android:id="@+id/st_death_cases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="325356"
                            android:textColor="@color/red"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:id="@+id/st_delta_deaths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="+4678"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Deaths"
                        android:textColor="@color/dark_green"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/deaths"
                        app:layout_constraintTop_toTopOf="@+id/deaths"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:weightSum="2">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/tests"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/gradient2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/st_tests"                        android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="325356"
                            android:textColor="@color/teal_700"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:id="@+id/st_delta_tests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="+4678"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Tests"
                        android:textColor="@color/dark_green"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/tests"
                        app:layout_constraintTop_toTopOf="@+id/tests"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/migrated"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/gradient2"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <TextView
                            android:id="@+id/st_migrated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="325356"
                            android:textColor="@color/purple_700"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Migrate"
                        android:textColor="@color/dark_green"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/migrated"
                        app:layout_constraintTop_toTopOf="@+id/migrated"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/gradient2"
                android:padding="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginStart="4dp"
                    android:text="Last Updated at : "
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/roboto"
                    android:textSize="18sp"
                    android:layout_marginLeft="4dp" />
                <TextView
                    android:id="@+id/st_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    tools:text="9 may 8:30pm"
                    android:textColor="@color/dark_green"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="Note: "
                    android:textColor="@color/red"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:id="@+id/state_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:fontFamily="@font/roboto"/>

            </LinearLayout>

            <SearchView
                android:id="@+id/search_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"
                android:background="@drawable/gradient3"
                android:iconifiedByDefault="false"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:queryBackground="@android:color/transparent"
                android:searchIcon="@drawable/search_icon"
                android:queryHint="Search District "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/gradient5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Districts"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="10dp" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/district_rv"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:nestedScrollingEnabled="true"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>